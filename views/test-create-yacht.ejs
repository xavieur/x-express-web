            <textarea id="question" name="question" required rows="2" cols="70"></textarea>
            <label for="answer1">Answer 1:</label>
            <textarea id="answer1" name="answer1" required rows="2" cols="70"></textarea>
            <label for="answer2">Answer 2:</label>
            <textarea id="answer2" name="answer2" required rows="2" cols="70"></textarea>
            <label for="answer3">Answer 3:</label>
            <textarea id="answer3" name="answer3" required rows="2" cols="70"></textarea>
            <label for="answer4">Answer 4:</label>
            <textarea id="answer4" name="answer4" required rows="2" cols="70"></textarea>
            <button>Create test</button>
        </form>
    </section>
</main>
